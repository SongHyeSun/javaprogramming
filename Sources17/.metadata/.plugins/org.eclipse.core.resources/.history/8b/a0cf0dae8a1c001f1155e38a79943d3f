package ch05_ex01;

public class ArrTest01 {

	public static void main(String[] args) {
		// [ ]가 하나이면 1차원  [ ] [ ] 2개이면 2차원, 3차원.... 
		int a [ ] [ ] = {{1,2,3,4,5}, 
						 {11,12,13,14,15}, 
						 {21,22,23,24,25}
						 };
		//행열로 표시한다. 1행1열 = 1
		//					  3행 2열 = 22
		System.out.println("시작");
		for (int i=0 ; i <a.length ; i++) {
			for (int j = 0; j<a[i].length; j++) {
				//0으로 시작하기 때문에 0행0열 이런식으로 된다.
				//2차원에서 a[i] 1차원 배열을 가르키면, 행의 크기를 가리키는 것이다.
				//즉 여기서는 a[i].length = 5;
				System.out.print(a[i][j] + " \t");
			} //inner for
			System.out.println();
		}
		//out for
	}

}
