package ch02_ex02;

public class ConditionalOpEx {

	public static void main(String[] args) {
		int a = 20, b = 30, max;
		//max도 변수이다.
		//int a = 20;
		//int b = 30;
		//int max;
		// 이 3줄을 ,로 한줄로 표현 가능
		max = a > b ? a:b;
		// a>b가 참이면 a를, 거짓이면 b를 넣어라
		
//		if(a>b) {
//			max = a;
//		} else {
//			max = b;
//		}
		
		
		System.out.println("max->"+max);
	}

}
