package ch06_ex01;

class Score2 {
	int kor, eng, math;
	Score2(int k, int e, int m ) {
		kor   =k;
		eng   =e;
		math  = m;
	}
	void print() {
		int sum = kor + eng + math;
		System.out.print("국어: "+ kor + ", 영어: "+eng + ", 수학 : "+ math + "\t");
		System.out.println("총점 : " + sum + ", 평균 :" + sum/3);
	}
}

