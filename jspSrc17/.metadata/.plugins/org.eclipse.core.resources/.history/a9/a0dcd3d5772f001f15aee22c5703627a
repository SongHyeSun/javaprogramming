<script type="text/javascript">
	function chk() {
		var mStr = "내가 제일 좋아하는 영화는? \n";
		var sStr = "내가 제일 좋아하는 노래는? \n";
		for (var i=0; frm.movie.length; i++){
			if (frm.movie[i].checked) {
				mStr += frm.movie[i].value+"\n";
				break;
			}
		}
		for (var i=0; frm.song.length; i++) {
			if (frm.song[i].checked) {
				sStr += frm.song[i].value+"/n";
				break;
			}
		}
		alert(mStr+sStr);
	}
</script>
